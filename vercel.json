{
  "version": 2,
  "cleanUrls": true,
  "builds": [
    {
      "src": "package.json", 
      "use": "@vercel/next",
      "config": { 
        "buildCommand": "npm run vercel-build"
      }
    }
  ],
  "buildCommand": "npm run vercel-build",
  "headers": [
    {
      "source": "/(.*).(jpe?g|png|webp|avif|svg|ico|css|js|woff2?|ttf|eot)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
} 